<form class="row g-3 mt-3" method="POST" action="/courses/{{course._id}}?_method=PUT">
<h3>Update Course: <p style="color:red">{{course.title}}</p> </h3>
  <div class="col-12">
    <label for="titleCourse" class="form-label">
      Tên khoá học:
    </label>
    <input type="text" class="form-control" value="{{course.title}}" name="title" id="titleCourse" required />
  </div>
  <div class="col-12">
    <label for="descCourse" class="form-label">
      Mô tả:
    </label>
    <textarea class="form-control" name="description" id="descCourse" rows="3" required>{{course.description}}</textarea>
  </div>
  <div class="col-12">
    <label for="priceCourse" class="form-label">
      Giá tiền
    </label>
    <input type="number" class="form-control" value="{{course.price}}" name="price" id="priceCourse" min="0" required />
  </div>
  <div class="col-12">
    <label for="introVideo" class="form-label">
      Video giới thiệu:
    </label>
    <input type="text" class="form-control" value="{{course.videoId}}" name="videoId" id="introVideo" placeholder="8YPgIOw43b0" required />
  </div>
  <div class="col-md-4">
    <label for="lecturer" class="form-label">
      Giảng viên:
    </label>
    <select id="lecturer" name="lecturer" class="form-select" required>
      <option value="" disabled selected hidden>
        Choose...
      </option>
      <option value="Giảng viên 1" {{#if (eq course.lecturer "Giảng viên 1")}}selected{{/if}}>
        Giảng viên 1
      </option>
      <option value="Giảng viên 2" {{#if (eq course.lecturer "Giảng viên 2")}}selected{{/if}}>
        Giảng viên 2
      </option>
    </select>
  </div>
  <div class="mb-3 row align-items-center">
    <label class="col-sm-2 col-form-label">
      Trạng thái:
    </label>
    <div class="col-sm-10">
      <div class="form-check form-check-inline col-sm-2">
        <input class="form-check-input" type="radio" name="isPublic" id="published" value="true" {{#if course.isPublic}}checked{{/if}}/>
        <label class="form-check-label" for="published">
          Đã xuất bản
        </label>
      </div>
      <div class="form-check form-check-inline col-sm-2">
        <input class="form-check-input" type="radio" name="isPublic" id="unpublished" value="false" {{#unless course.isPublic}}checked{{/unless}}/>
        <label class="form-check-label" for="unpublished">
          Chưa xuất bản
        </label>
      </div>
    </div>
  </div>

  <div class="mb-3 row align-items-center">
    <label class="col-sm-2 col-form-label">
      Trình độ:
    </label>
    <div class="col-sm-10">
      <div class="form-check form-check-inline col-sm-2">
        <input class="form-check-input" type="radio" name="level" id="isBeginner" value="beginner" {{#if (eq course.level "beginner")}}checked{{/if}}/>
        <label class="form-check-label" for="isBeginner">
          Nhập môn
        </label>
      </div>
      <div class="form-check form-check-inline col-sm-2">
        <input class="form-check-input" type="radio" name="level" id="isIntermediate" value="intermediate" {{#if (eq course.level "intermediate")}}checked{{/if}}/>
        <label class="form-check-label" for="isIntermediate">
          Trung cấp
        </label>
      </div>
      <div class="form-check form-check-inline col-sm-2">
        <input class="form-check-input" type="radio" name="level" id="isAdvanced" value="advanced" {{#if (eq course.level "advanced")}}checked{{/if}} />
        <label class="form-check-label" for="isAdvanced">
          Nâng cao
        </label>
      </div>
    </div>
  </div>
  <div class="col-12">
    <label for="inputTag" class="form-label">
      Tags
    </label>
    <textarea type="text" class="form-control" name="tags" id="inputTag">{{course.tags}}</textarea>
  </div>
  <div class="col-12 text-center">
    <button type="submit" class="btn btn-primary mx-2">
      Edit
    </button>
    <button type="button" class="btn btn-danger mx-2" onclick="window.location.href='/'">
      Cancle
    </button>
  </div>
</form>